<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Newegg.com Sign Up</title>
    <link
      rel="shortcut icon"
      href="https://c1.neweggimages.com/WebResource/ngm/newegg.ico"
      type="image/x-icon"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body>
    <div class="registerBox">
      <a href="http://localhost:3000/global/in-en/">
        <div>
          <img
            src="https://c1.neweggimages.com/WebResource/Themes/2005/Nest/logo_424x210.png"
            alt=""
            class="eggimg"
          />
        </div>
      </a>
      <div class="forms">
        <div>
          <h4>Create Account</h4>
          <div>
            <form
              action=""
              method="post"
              class="createAccount"
              onsubmit="Register(event)"
              id="reg-form"
            >
              <div>
                <input
                  type="text"
                  id="first_name"
                  placeholder="First Name"
                  class="newInput"
                />
              </div>
              <div>
                <input
                  type="text"
                  id="last_name"
                  placeholder="Last Name"
                  class="newInput"
                />
              </div>
              <div>
                <input
                  type="text"
                  id="Email_address"
                  placeholder="Email Address"
                  class="newInput"
                />
              </div>
              <div>
                <input
                  type="number"
                  id="Mobile"
                  placeholder="Mobile Phone Number (optional)"
                  class="newInput"
                />
              </div>
              <div>
                <input
                  type="password"
                  id="Password"
                  placeholder="Password"
                  class="newInput"
                />
              </div>
              <div class="checker">
                <span>
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckChecked"
                    checked
                  />
                </span>
                <span>
                  <label class="form-check-label" for="flexCheckChecked">
                    Subscribe for exclusive e-mail offers
                  </label></span
                >
                <label class="discmargin">and discounts</label>

                <p>
                  <small class="gray"
                    >By creating an account, you agree to Newegg's Privacy
                    Notice and Terms of Use.</small
                  >
                </p>
              </div>
              <a href="google.com">
                <button class="signinButton" id="signin" type="submit">
                  SIGN IN
                </button></a
              >

              <div>
                <p>
                  Have an account?
                  <a href="http://localhost:3000/global/in-en/signin"
                    >Sign In</a
                  >
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
  crossorigin="anonymous"
></script>
<script>
  function Register(e) {
    e.preventDefault();
    let formdata = {
      name: document.getElementById("first_name").value,
      email: document.getElementById("Email_address").value,
      password: document.getElementById("Password").value,
      username: document.getElementById("first_name").value,
      mobile: document.getElementById("Mobile").value,
    };
    formdata = JSON.stringify(formdata);
    console.log({ formdata });
    fetch("http://localhost:3000/global/in-en/auth/register", {
      method: "POST",
      body: formdata,
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((res) => {
        return res.json();
      })
      .then((res) => {
        console.log("res");
      })
      .catch((err) => {
        console.log(err);
      });
  }
</script>
